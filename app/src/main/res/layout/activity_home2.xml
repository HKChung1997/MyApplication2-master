<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chung.myapplication.Home2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="50"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="You are login as : "
        android:gravity="right"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="50"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsername"
        android:textSize="20dp"
        android:text=""
        android:gravity="left"/> </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Version : "
            android:gravity="right"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:id="@+id/tvVersion"
            android:textSize="20dp"
            android:text=""
            android:gravity="left"/>></LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bPHandbook"
        android:text="Handbook" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bPHomework"
        android:text="Homework" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bPAttend"
        android:text="Attendance" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bPNotice"
        android:text="Notice" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bPContact"
        android:text="Contact teacher" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asddsaadsadsasd"
        android:textSize="20dp"
        android:id="@+id/test"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asdsadsadsadsa"
        android:textSize="20dp"
        android:id="@+id/test2"/>
</LinearLayout>
